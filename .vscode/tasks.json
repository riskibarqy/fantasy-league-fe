{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install dependencies",
      "type": "shell",
      "command": "make install",
      "group": "build"
    },
    {
      "label": "Run dev server",
      "type": "shell",
      "command": "make dev",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Typecheck",
      "type": "shell",
      "command": "make typecheck",
      "group": "test"
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "make test",
      "group": "test"
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "make build",
      "group": "build"
    },
    {
      "label": "Quality check",
      "type": "shell",
      "command": "make check",
      "group": "test"
    }
  ]
}
